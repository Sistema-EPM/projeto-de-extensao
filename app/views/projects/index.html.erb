<p style="color: green"><%= notice %></p>

<h1>Projeto</h1>

<div id="projects">
  <%= form_tag('/search_project', method: 'get') do %>
    <%= text_field_tag :search, params[:search], placeholder: 'Busque um projeto pelo nome' %>
    <%= submit_tag 'Search' %>
  <% end %>

  <% @projects.each do |project| %>
    <%= render project %>
    <p>
      <%= link_to "Show this project", project %>
    </p>
  <% end %>
</div>

<%= link_to "New project", new_project_path %>
