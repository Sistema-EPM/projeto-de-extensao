<p style="color: green"><%= notice %></p>

<%= render @project %>

<% if (admin_signed_in? || current_user.try(:is_responsible)) %>
  <div>
    <%= link_to "Edit this project", edit_project_path(@project) %> |
    <%= link_to "Back to projects", projects_path %>
    <%= link_to "Vincular aluno", new_assignment_path(project_id: @project.id) %>

    <%= button_to "Excluir", @project, method: :delete %>
  </div>
<% end %>