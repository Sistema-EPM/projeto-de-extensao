    <% end %>
  </div>

  <div>
    <%= form.label :project_id, "Project", style: "display: block" %>
    <%= form.select :project_id, options_for_select([[project.name, project.id]]), include_blank: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
