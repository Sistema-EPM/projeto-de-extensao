<style>

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: Arial, sans-serif;
    background-color: #f2f2f2;
  }

  .formulario {
    background-color: white;
    padding: 40px;
    max-width: 80%;
    margin: 0 auto;
    height: 300px;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    position: relative;
    top: 90px;
  }

  .form-row {
    margin-bottom: 20px;
  }

  h3{
    position: relative;
    top: -20px;
    font-weight: bold;
    color: #5E8F87;
  }

  button {
    position: relative;
    top: 15px;
  }

  .color-label{
    color: #5E8F87;
  }
  i{
    padding-left: 10px;
  }

</style>

<%= form_with(model: assignment) do |form| %>
  <% if assignment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(assignment.errors.count, "error") %> prohibited this assignment from being saved:</h2>

      <ul>
        <% assignment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>  

  <div class="formulario">
    <div class="form-group col-md-12">
      <h3><%= @context %><i></i></h3>
    <div>
    <div class="form-row">

      <div class="form-group col-md-6">
        <%= form.label :user_id, "Aluno", class: "color-label" %>
        <% if @users.present? %>
          <%= form.collection_select :user_id, @users, :id, :name, {}, class: "form-control" %>
        <% else %>
          <p>Não há alunos cadastrados</p>
        <% end %>
      </div>

      <div class="form-group col-md-6">
        <%= form.label :project_id, "Projeto", style: "display: block" %>
        <% if @projects.present? %>
          <%= form.collection_select :project_id, @projects, :id, :name, {}, class: "form-control" %>
        <% else %>
          <p>Não há projetos cadastrados</p>
        <% end %>
      </div>

      <div class="form-row">
        <div class="form-group col-md-6">
          <%= form.submit "Salvar", class: "btn btn-primary" %>
          <%= link_to "Voltar", projects_path, class: "btn btn-danger" %>
        <div>
      </div>
    </div>
  </div>
<% end %>
