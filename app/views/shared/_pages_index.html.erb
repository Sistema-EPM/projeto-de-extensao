<div style="display: flex; align-items: center;">
  <div style="display: inline-block;">
    <h1><%= @context %></h1>
  </div>
  <div style="display: inline-block; margin-left: 10px; padding-top: 1rem">
  </div>
</div>
<div class="form-outline">
  <% if admin_signed_in? %>
    <%= form_tag('/search_student', method: 'get', style: "display: flex; justify-content: space-between") do %>
      <%= text_field_tag :search, params[:search], placeholder: 'Busque um aluno pelo nome', class: "form-control", style: "display: inline-block; margin-right: 5px" %>
      <%= submit_tag 'Pesquisar', type: "button", class: "btn btn-primary", style: "display: inline-block" %>
    <% end %>
  <% end %>
</div>