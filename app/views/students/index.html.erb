<p style="color: green"><%= notice %></p>

<div id="students">
  <%= render partial: "shared/pages_index" %>
  <div style="padding: 20px 0">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>Nome</th>
          <th>E-mail</th>
          <th>Status</th>
          <th>Horas reportadas</th>
          <th colspan="1"></th>
        </tr>
      </thead>

      <tbody>
        <% @students.each do |student| %>
          <div>
            <tr>
              <td><%= link_to student.name, student, class: "row-link" %></td>
              <td><%= student.email %></td>
              <td><%= student.status ? "Ativo" : "Evadido" %></td>
              <td><%= student.reports.sum(:reported_effort) %></td>
              <td><%= button_to "Excluir", student, class: "btn btn-danger", method: :delete, data: { confirm: "VocÃª tem certeza que deseja excluir o aluno #{student.name}?" } %></td>
            </tr>
          </div>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

