<style>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: Arial, sans-serif;
    background-color: #f2f2f2;
  }

  .formulario {
    background-color: white;
    padding: 40px;
    max-width: 80%;
    margin: 0 auto;
    height: 250px;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    position: relative;
    top: 90px;
  }

  .form-row {
    margin-bottom: 20px;
  }

  h3{
    position: relative;
    top: -20px;
    font-weight: bold;
    color: #5E8F87;
  }

  button {
    position: relative;
    top: 15px;
  }

  .color-label{
    color: #5E8F87;
  }
</style>

<%= form_with(model: course) do |form| %>
  <div class="formulario">
    <% if course.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

        <ul>
          <% course.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group col-md-12">
      <h3><i class="fas fa-folder"></i><%= @context %></h3>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= form.label :name, class: "color-label" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group col-md-6">
        <%= form.label :user_id, "Coordenador", class: "color-label" %>
        <% if @users.present? %>
          <%= form.collection_select :user_id, @users, :id, :name, {}, class: "form-control" %>
        <% else %>
          <div class="form-control">
            <p>Não há usuários cadastrados</p>
          </div>
        <% end %>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
        <%= form.submit "Salvar", class: "btn btn-primary" %>
        <%= link_to "Voltar", classrooms_path, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
<% end %>