<%= form_with(model: report) do |form| %>
  <% if report.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
        <% report.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.number_field :reported_effort, min: 0, step: 0.5, placeholder: 'Horas reportadas...' %>
  </div>

  <div>
    <%= form.label :reported_date, "Data do reporte", style: "display: block" %>
    <%= form.date_field :reported_date %>
  </div>

  <div>
    <%= form.label :project_id, "Projeto", style: "display: block" %>
    <%= form.collection_select :project_id, @projects, :id, :name %>
  </div>

  <div>
    <%= form.file_field :file %>
  </div>

  <div>
    <%= form.submit "Salvar" %>
  </div>
<% end %>
