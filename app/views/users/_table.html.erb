<thead>
  <tr>
    <% if (admin_signed_in? || current_user.try(:is_responsible)) %>
      <th style="width: 2vw; text-align: center" colspan="1">
        <%= check_box_tag 'select_all', false, false, id: 'select-all-checkbox' %>
      </th>
    <% end %>
    <th style="text-align: center; width: 25%" class="color-label">Nome</th>
    <th style="text-align: center; width: 20%" class="color-label">E-mail</th>
    <th style="text-align: center; width: 20%" class="color-label">Turma</th>
    <th style="text-align: center; width: 15%" class="color-label">Status</th>
    <th style="text-align: center; width: 20%" class="color-label">Horas aprovadas</th>
  </tr>
</thead>