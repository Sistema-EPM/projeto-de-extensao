<style>

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: Arial, sans-serif;
    background-color: #f2f2f2;
  }

  .formulario {
    background-color: white;
    padding: 40px;
    max-width: 80%;
    margin: 0 auto;
    height: 300px;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    position: relative;
    top: 90px;
  }

  .form-row {
    margin-bottom: 20px;
  }

  h3{
    position: relative;
    top: -20px;
    font-weight: bold;
    color: #5E8F87;
  }

  .style-buttons {
    margin-top: 30px; 
    display: flex; 
    justify-content: space-evenly; 
    max-width: 300px;
  }

  .color-label{
    color: #5E8F87;
  }

</style>

<p style="color: green"><%= notice %></p>

<div class= "formulario">
<%= render @student %>
  <p>
    <strong>Projetos:</strong>
    <% @projects_by_student.each do |project| %>
      <p>
        <h3>Nome:</h3>
        <%= project.description %>
      </p>

      <p>
        <h3>Descrição:</h3>
        <%= project.description %>
      </p>

      <p>
        <h3>Horas reportadas:</h3>
        <%= project.reports.sum(:reported_effort) %>
      </p>
    <% end %>
  </p>

  <div class="style-buttons">
    <%= link_to "Editar", edit_user_path(@student), class: "btn btn-warning" %>
    <%= link_to "Voltar para alunos", users_path, class: "btn btn-primary" %>
    <%= button_to "Excluir", @student, method: :delete, class: "btn btn-danger" %>
  </div>
</div>
